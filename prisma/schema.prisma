generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Categories {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  menuItems   Menu[]
}

model Menu {
  id             String                @id @default(auto()) @map("_id") @db.ObjectId
  description    String
  image_url      String
  rating         Int
  calories       Int
  protein        Int
  price          Float
  categoryId     String                @db.ObjectId
  category       Categories            @relation(fields: [categoryId], references: [id])
  customizations menu_Costumizations[] 
}

enum CustomizationType {
  topping
  side
  size
  crust
  bread
  spice
  base
  sauce
}

model Costumizations {
  id    String                @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  price Int
  type  CustomizationType
  menus menu_Costumizations[]
}

model menu_Costumizations {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  menuId          String @db.ObjectId
  costumizationId String @db.ObjectId

  menu           Menu           @relation(fields: [menuId], references: [id])
  costumizations Costumizations @relation(fields: [costumizationId], references: [id])
}
